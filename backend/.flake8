[flake8]
# Flake8 configuration for PEFT Studio backend

# Maximum line length
max-line-length = 127

# Maximum cyclomatic complexity
max-complexity = 10

# Exclude directories
exclude =
    .git,
    __pycache__,
    .pytest_cache,
    .hypothesis,
    *.pyc,
    *.pyo,
    *.pyd,
    .venv,
    venv,
    build,
    dist,
    *.egg-info

# Error codes to always check (critical errors)
select = E9,F63,F7,F82

# Ignore specific warnings
ignore =
    # Line too long (handled by max-line-length)
    E501,
    # Line break before binary operator (conflicts with black)
    W503,
    # Line break after binary operator
    W504

# Per-file ignores
per-file-ignores =
    __init__.py:F401,F403
    tests/**/*.py:F401,F811

# Show source code for errors
show-source = True

# Show statistics
statistics = True

# Count errors
count = True
