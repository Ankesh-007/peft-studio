{
  "name": "peft-studio",
  "version": "1.0.0",
  "description": "Desktop application for Parameter-Efficient Fine-Tuning of Large Language Models",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest --run --coverage",
    "test:e2e": "vitest --run --config vitest.e2e.config.ts",
    "test:integration": "vitest --run --config vitest.integration.config.ts",
    "test:pbt": "vitest --run --config vitest.pbt.config.ts",
    "lint": "eslint . --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css}\"",
    "type-check": "tsc --noEmit",
    "electron:dev": "electron .",
    "electron:build": "electron-builder"
  },
  "keywords": [
    "peft",
    "fine-tuning",
    "llm",
    "machine-learning",
    "electron",
    "react",
    "pytorch",
    "transformers",
    "desktop-app",
    "ai"
  ],
  "author": "PEFT Studio Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Ankesh-007/peft-studio.git"
  },
  "homepage": "https://github.com/Ankesh-007/peft-studio#readme",
  "bugs": {
    "url": "https://github.com/Ankesh-007/peft-studio/issues"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "electron": "^39.2.4",
    "electron-builder": "^25.1.8",
    "lucide-react": "^0.555.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "recharts": "^3.5.1",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@axe-core/react": "^4.11.0",
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/node": "^22.10.1",
    "@types/react": "^18.3.12",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-v8": "^4.0.14",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "fast-check": "^3.15.0",
    "jest-axe": "^10.0.0",
    "jsdom": "^23.2.0",
    "playwright": "^1.57.0",
    "postcss": "^8.4.49",
    "prettier": "^3.7.3",
    "tailwindcss": "^3.4.15",
    "typescript": "^5.7.2",
    "vite": "^7.2.6",
    "vitest": "^4.0.14"
  },
  "build": {
    "appId": "com.peftstudio.app",
    "productName": "PEFT Studio",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "backend/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icon.png",
      "category": "Development"
    }
  }
}
